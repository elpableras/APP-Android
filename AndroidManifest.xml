<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miw.android.notes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    
    <!-- Fine access to location requires this permission.
         This permission implies access coarse location. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.miw.android.main.Splash"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.miw.android.main.Home"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.miw.android.note.Date"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_date" >
        </activity>
        <activity
            android:name="com.miw.android.note.ListNotes"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_list" >
        </activity>
    </application>

</manifest>